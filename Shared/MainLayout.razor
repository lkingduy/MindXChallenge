@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Mvc
@using Microsoft.AspNetCore.Identity
@inject SignInManager<MindXChallenge.Data.EntityUser> SignInManager

<style>
    .site-layout-content {
        background: #fff;
        padding: 24px;
        min-height: 280px;
    }

    #components-layout-demo-top .logo {
        width: 120px;
        height: 31px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px 24px 16px 0;
        float: left;
    }
</style>

<Layout Class="layout">
    <Header>
        <div class="logo" />
        <Menu Theme="MenuTheme.Dark" Mode="MenuMode.Horizontal" DefaultSelectedKeys=@(new[]{"2"})>
            <MenuItem Key="1">nav 1</MenuItem>
            <MenuItem Key="2">nav 2</MenuItem>
            <MenuItem Key="3">nav 3</MenuItem>
            <AuthorizeView>
                <Authorized>
                    <a href="Identity/Account/Manage">Hello, @context.User.Identity.Name!</a>
                    @*<li class="nav-item">
                        <form method="post" action="Identity/Account/LogOut">
                            <button type="submit" class="nav-link btn btn-link">Log out</button>
                        </form>
                    </li>*@
                </Authorized>
                <NotAuthorized>
                    <MenuItem Key="4"><a href="Identity/Account/Register">Register</a></MenuItem>
                    <MenuItem Key="5"><a href="Identity/Account/Login">Log in</a></MenuItem>
                </NotAuthorized>
            </AuthorizeView>
            <MenuItem><a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a></MenuItem>
        </Menu>
    </Header>
    <Content Style="padding: 0 50px;">
        <Breadcrumb Style="margin: 16px 0;">
            <BreadcrumbItem>Home</BreadcrumbItem>
            <BreadcrumbItem>List</BreadcrumbItem>

        </Breadcrumb>
        <div class="site-layout-content">
            @Body
        </div>
    </Content>
    <Footer Style="text-align: center; ">Ant Design ©2018 Created by Ant UED</Footer>
</Layout>
